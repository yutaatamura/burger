<div class="container">
    <div class="row">

        <div class="col-md-12">
            <h1>Burgers to Eat!</h1>
        </div>
    </div>

    <div class="container">
        <button class="createBurger">Create a burger!</button>
    </div>

    <div class="row">
        <div class="col-md-6">
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        <li>
                            <p> 
                                {{this.id}}. {{this.burger_name}}

                                <button data-burgerid="{{this.id}}" class="delBurger">Devour this burger!</button>
                            </p>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6">
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        <li>
                            <p>
                                {{this.id}}. {{this.burger_name}}
                            </p>
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>
</div>